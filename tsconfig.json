{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./assets/js",
    "sourceMap": true
  },
  "include": ["assets/js/**/*"],
  "exclude": ["node_modules"]
}
